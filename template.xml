<?xml version="1.0"?>
<Container>
  <Name>gregtech-server-new-horizons</Name>
  <Repository>sling2009/gt-new-horizons:1.0</Repository>
  <Registry>https://hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP></MyIP>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support></Support>
  <Project></Project>
  <Overview>GregTech New Horizons Minecraft Server</Overview>
  <Category>Games</Category>
  <WebUI></WebUI>
  <Config>
    <!-- EULA Umgebungsvariable -->
    <Variable>
      <Name>EULA</Name>
      <Default>TRUE</Default>
      <Description>Akzeptiere die Minecraft EULA</Description>
      <Required>true</Required>
    </Variable>

    <!-- Port -->
    <Variable>
      <Name>PORT</Name>
      <Default>25565</Default>
      <Description>Minecraft Server Port</Description>
      <Required>true</Required>
    </Variable>

    <!-- GregTech Version -->
    <Variable>
      <Name>GREGTECH_VERSION</Name>
      <Default>2.7.4</Default>
      <Description>GregTech Server Version</Description>
      <Required>true</Required>
    </Variable>

    <!-- Benutzerverzeichnis (Volume) -->
    <Volume>
      <HostDir>/mnt/user/appdata/gregtech</HostDir>
      <ContainerDir>/home/minecraft</ContainerDir>
      <Mode>rw</Mode>
      <Description>Server-Daten</Description>
    </Volume>

    <!-- Port Mapping -->
    <Port>
      <HostPort>25565</HostPort>
      <ContainerPort>25565</ContainerPort>
      <Protocol>tcp</Protocol>
      <Description>Minecraft Server Port</Description>
    </Port>
  </Config>
</Container>

